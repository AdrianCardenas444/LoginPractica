<Window x:Class="LoginPractica.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Biblioteca de Juegos" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen" Background="#1b2838">

    <Window.Resources>
        <Style x:Key="GameCard" TargetType="Border">
            <Setter Property="Background" Value="#233c51"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="210"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#171a21" Padding="20,0">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="BIBLIOTECA" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,0,25,0"/>
                    <Button x:Name="btnAdminPanel" Content="⚙ PANEL ADMIN" Visibility="Collapsed" Click="BtnAdminPanel_Click" 
                            Background="#FFD700" Foreground="Black" FontWeight="Bold" Padding="12,6" Cursor="Hand"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="lblReloj" Text="00:00" Foreground="#8f98a0" FontSize="18" Margin="0,0,25,0"/>
                    <TextBlock x:Name="txtUsuarioActivo" Text="USUARIO" Foreground="#66c0f4" FontWeight="Bold" FontSize="16"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#171a21" Padding="20">
                <StackPanel>
                    <TextBlock Text="BUSCAR JUEGO" Foreground="#4f5b66" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox x:Name="txtBuscador" Background="#2a475e" Foreground="White" BorderThickness="0" Padding="8" TextChanged="TxtBuscador_TextChanged"/>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Column="1">
                <WrapPanel x:Name="GamesPanel" HorizontalAlignment="Center" Margin="15">
                    <Border Style="{StaticResource GameCard}">
                        <StackPanel>
                            <Image Source="https://upload.wikimedia.org/wikipedia/en/b/b9/Elden_Ring_Box_art.jpg" Height="270" Stretch="UniformToFill"/>
                            <TextBlock Text="Elden Ring" Foreground="White" Margin="10,8" FontWeight="Bold"/>
                            <Button Content="41,99€" Background="#5c7e10" Foreground="White" BorderThickness="0" Margin="10,0,10,15" Padding="5"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource GameCard}">
                        <StackPanel>
                            <Image Source="https://upload.wikimedia.org/wikipedia/en/9/9f/Cyberpunk_2077_box_art.jpg" Height="270" Stretch="UniformToFill"/>
                            <TextBlock Text="Cyberpunk 2077" Foreground="White" Margin="10,8" FontWeight="Bold"/>
                            <Button Content="59,99€" Background="#5c7e10" Foreground="White" BorderThickness="0" Margin="10,0,10,15" Padding="5"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource GameCard}">
                        <StackPanel>
                            <Image Source="https://upload.wikimedia.org/wikipedia/en/a/a5/Grand_Theft_Auto_V.png" Height="270" Stretch="UniformToFill"/>
                            <TextBlock Text="GTA V" Foreground="White" Margin="10,8" FontWeight="Bold"/>
                            <Button Content="29,99€" Background="#5c7e10" Foreground="White" BorderThickness="0" Margin="10,0,10,15" Padding="5"/>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource GameCard}">
                        <StackPanel>
                            <Image Source="https://upload.wikimedia.org/wikipedia/en/4/44/Red_Dead_Redemption_II.jpg" Height="270" Stretch="UniformToFill"/>
                            <TextBlock Text="Red Dead 2" Foreground="White" Margin="10,8" FontWeight="Bold"/>
                            <Button Content="59,99€" Background="#5c7e10" Foreground="White" BorderThickness="0" Margin="10,0,10,15" Padding="5"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </ScrollViewer>
        </Grid>

        <Border Grid.Row="2" Background="#171a21" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cerrar Sesión" Click="BtnCerrarSesion_Click" Background="#2a475e" Foreground="#66c0f4" Padding="20,10" Margin="0,0,10,0" FontWeight="Bold"/>
                <Button Content="Salir al Escritorio" Click="BtnSalirApp_Click" Background="Transparent" Foreground="#8f98a0" BorderThickness="0" Padding="10,5" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>