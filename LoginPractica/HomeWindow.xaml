<Window x:Class="LoginPractica.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Biblioteca" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="#1b2838">

    <Window.Resources>
        <Style x:Key="PlayButton" TargetType="Button">
            <Setter Property="Background" Value="#5c7e10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="0,8"/>
            <Setter Property="Margin" Value="10,5,10,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#76a117"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Border" x:Key="GameCardStyle">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#2a475e"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#375b75"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.05" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.05" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#171a21" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="BIBLIOTECA" Foreground="#c7d5e0" FontSize="24" FontWeight="Bold" Margin="0,0,30,0" FontFamily="Arial"/>
                    <TextBlock Text="INICIO" Foreground="#66c0f4" FontSize="16" VerticalAlignment="Center" Margin="0,0,20,0" FontWeight="Bold" TextDecorations="Underline"/>
                    <TextBlock x:Name="txtContador" Text="Mostrando 5 juegos" Foreground="#8f98a0" FontSize="14" VerticalAlignment="Center" Margin="10,0,0,0" FontStyle="Italic"/>
                </StackPanel>

                <Border Grid.Column="1" Background="#101215" CornerRadius="3" MaxWidth="350" Margin="20,0" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🔍" Foreground="#66c0f4" VerticalAlignment="Center" Margin="5,0,10,0"/>
                        <TextBox x:Name="txtBuscador" Grid.Column="1" Background="Transparent" BorderThickness="0" Foreground="#c7d5e0" 
                                 CaretBrush="White" FontSize="14" VerticalAlignment="Center"
                                 TextChanged="TxtBuscador_TextChanged"/>
                    </Grid>
                </Border>

                <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="lblReloj" Text="00:00" Foreground="#8f98a0" FontSize="20" VerticalAlignment="Center" Margin="0,0,20,0" FontFamily="Consolas"/>

                    <Border CornerRadius="2" Width="35" Height="35" Margin="0,0,10,0" BorderBrush="#66c0f4" BorderThickness="2">
                        <Border.Background>
                            <ImageBrush ImageSource="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png"/>
                        </Border.Background>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="txtUsuarioActivo" Text="USUARIO" Foreground="#66c0f4" FontSize="14" FontWeight="Bold"/>
                        <TextBlock Text="Cartera: 12,50€" Foreground="#8f98a0" FontSize="11"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
            <WrapPanel x:Name="GamesPanel" HorizontalAlignment="Center" ItemWidth="240" ItemHeight="340" Margin="20">

                <Border Style="{StaticResource GameCardStyle}">
                    <StackPanel>
                        <Image Source="https://upload.wikimedia.org/wikipedia/en/b/b9/Elden_Ring_Box_art.jpg" Height="260" Stretch="UniformToFill"/>
                        <TextBlock Text="Elden Ring" Foreground="#c7d5e0" HorizontalAlignment="Center" Margin="0,10,0,5" FontWeight="Bold" FontSize="15"/>
                        <Button Content="JUGAR" Click="BtnJugar_Click" Style="{StaticResource PlayButton}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource GameCardStyle}">
                    <StackPanel>
                        <Image Source="https://upload.wikimedia.org/wikipedia/en/9/9f/Cyberpunk_2077_box_art.jpg" Height="260" Stretch="UniformToFill"/>
                        <TextBlock Text="Cyberpunk 2077" Foreground="#c7d5e0" HorizontalAlignment="Center" Margin="0,10,0,5" FontWeight="Bold" FontSize="15"/>
                        <Button Content="JUGAR" Click="BtnJugar_Click" Style="{StaticResource PlayButton}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource GameCardStyle}">
                    <StackPanel>
                        <Image Source="https://upload.wikimedia.org/wikipedia/en/a/a5/Grand_Theft_Auto_V.png" Height="260" Stretch="UniformToFill"/>
                        <TextBlock Text="Grand Theft Auto V" Foreground="#c7d5e0" HorizontalAlignment="Center" Margin="0,10,0,5" FontWeight="Bold" FontSize="15"/>
                        <Button Content="JUGAR" Click="BtnJugar_Click" Style="{StaticResource PlayButton}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource GameCardStyle}">
                    <StackPanel>
                        <Image Source="https://image.api.playstation.com/vulcan/img/rnd/202010/2618/w48z6bzefZPrRcJHc7L8SO66.png" Height="260" Stretch="UniformToFill"/>
                        <TextBlock Text="The Last of Us™ Part II" Foreground="#c7d5e0" HorizontalAlignment="Center" Margin="0,10,0,5" FontWeight="Bold" FontSize="15"/>
                        <Button Content="JUGAR" Click="BtnJugar_Click" Style="{StaticResource PlayButton}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource GameCardStyle}">
                    <StackPanel>
                        <Image Source="https://upload.wikimedia.org/wikipedia/en/4/44/Red_Dead_Redemption_II.jpg" Height="260" Stretch="UniformToFill"/>
                        <TextBlock Text="Red Dead Redemption 2" Foreground="#c7d5e0" HorizontalAlignment="Center" Margin="0,10,0,5" FontWeight="Bold" FontSize="15"/>
                        <Button Content="JUGAR" Click="BtnJugar_Click" Style="{StaticResource PlayButton}"/>
                    </StackPanel>
                </Border>

            </WrapPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#171a21" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cerrar Sesión" Click="BtnCerrarSesion_Click" Background="#2a475e" Foreground="#66c0f4" Padding="20,10" Margin="0,0,10,0" FontWeight="Bold" Cursor="Hand" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Salir al Escritorio" Click="BtnSalirApp_Click" Background="Transparent" Foreground="#c7d5e0" Padding="20,10" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>