<Window x:Class="LoginPractica.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Biblioteca" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1b2838">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#171a21" Padding="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="BIBLIOTECA" Foreground="#c7d5e0" FontSize="24" FontWeight="Bold" Margin="0,0,20,0"/>
                <TextBlock Text="INICIO" Foreground="#66c0f4" FontSize="18" VerticalAlignment="Bottom" Margin="0,0,20,4"/>
            </StackPanel>
        </Border>

        <ListBox Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="20" Foreground="#c7d5e0">
            <ListBoxItem FontSize="16" Padding="10">🚀 Cyberpunk 2077</ListBoxItem>
            <ListBoxItem FontSize="16" Padding="10">⚔️ Elden Ring</ListBoxItem>
            <ListBoxItem FontSize="16" Padding="10">🔫 Counter-Strike 2</ListBoxItem>
        </ListBox>

        <Border Grid.Row="2" Background="#171a21" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cerrar Sesión" Click="BtnCerrarSesion_Click" Background="#2a475e" Foreground="#66c0f4" Padding="15,8" Margin="0,0,10,0" FontWeight="Bold"/>
                <Button Content="Salir al Escritorio" Click="BtnSalirApp_Click" Background="Transparent" Foreground="#c7d5e0" Padding="15,8"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>