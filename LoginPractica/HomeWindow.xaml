<Window x:Class="LoginPractica.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nexus Store" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#1b2838">
    <Window.Resources>
        <Style x:Key="ZoomImageStyle" TargetType="Image">
            <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.1" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.1" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#171a21" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="NEXUS" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="STORE" Foreground="#66c0f4" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,30,0"/>
                    <Button x:Name="btnAdmin" Content="⚙ GESTIÓN ADMIN" Visibility="Collapsed" Click="BtnAdmin_Click" Background="#FFD700" FontWeight="Bold" Padding="10,5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center">
                    <Button x:Name="btnNavTienda" Content="TIENDA" Click="Nav_Click" Tag="Tienda" Background="Transparent" Foreground="#66c0f4" FontSize="18" FontWeight="Bold" Margin="15,0" BorderThickness="0"/>
                    <Button x:Name="btnNavBiblio" Content="BIBLIOTECA" Click="Nav_Click" Tag="Biblioteca" Background="Transparent" Foreground="#c7d5e0" FontSize="18" FontWeight="Bold" Margin="15,0" BorderThickness="0"/>
                    <Button x:Name="btnNavCarro" Content="CARRITO (0)" Click="Nav_Click" Tag="Carrito" Background="#5c7e10" Foreground="White" FontSize="16" FontWeight="Bold" Margin="15,0" Padding="15,5" BorderThickness="0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="2">
                    <TextBlock x:Name="lblReloj" Foreground="#8f98a0" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtUserName" Foreground="#66c0f4" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid x:Name="VistaTienda" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="#1b2838" Padding="20">
                    <StackPanel>
                        <TextBlock Text="BUSCAR" Foreground="#4f5b66" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBox x:Name="txtBuscador" Background="#2a475e" Foreground="White" BorderThickness="0" Padding="8" TextChanged="TxtBuscador_TextChanged"/>
                    </StackPanel>
                </Border>
                <ScrollViewer Grid.Column="1">
                    <WrapPanel x:Name="PanelTienda" HorizontalAlignment="Center" Margin="15"/>
                </ScrollViewer>
            </Grid>

            <Grid x:Name="VistaBiblioteca" Visibility="Collapsed" Background="#1b2838">
                <ScrollViewer>
                    <WrapPanel x:Name="PanelBiblioteca" HorizontalAlignment="Left" Margin="30"/>
                </ScrollViewer>
            </Grid>

            <Grid x:Name="VistaCarrito" Visibility="Collapsed" Background="#1b2838">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="700">
                    <TextBlock Text="TU CARRO DE LA COMPRA" Foreground="White" FontSize="24" Margin="0,0,0,20" TextAlignment="Center"/>
                    <DataGrid x:Name="gridCarrito" AutoGenerateColumns="False" IsReadOnly="True" 
                              Background="#101215" RowBackground="#1b2838" AlternatingRowBackground="#2a475e"
                              Foreground="White" HeadersVisibility="Column" BorderThickness="0" Height="300" Margin="0,0,0,20">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Juego" Binding="{Binding Titulo}" Width="*" FontSize="14"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat={}{0}€}" Width="100" FontWeight="Bold"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="TOTAL:" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock x:Name="txtTotalCarro" Text="0,00€" Foreground="#66c0f4" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,30,0"/>
                        <Button Content="PAGAR AHORA" Click="BtnConfirmarCompra_Click" Background="#5c7e10" Foreground="White" FontSize="16" Padding="20,10" FontWeight="Bold"/>
                    </StackPanel>
                    <Button Content="Vaciar Cesta" Click="BtnVaciar_Click" HorizontalAlignment="Left" Background="Transparent" Foreground="#ff4c4c" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Border Grid.Row="2" Background="#171a21" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cerrar Sesión (Login)" Click="BtnCerrar_Click" Background="#2a475e" Foreground="#66c0f4" Padding="15,8" Margin="0,0,10,0" FontWeight="Bold"/>
                <Button Content="Salir al Escritorio" Click="BtnSalir_Click" Background="#ff4c4c" Foreground="White" Padding="15,8" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>