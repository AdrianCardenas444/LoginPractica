<Window x:Class="LoginPractica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login NEXUS" Width="400"
        SizeToContent="Height"
        Background="#171a21" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Border Padding="30">
                <StackPanel VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="NEXUS" Foreground="White" FontSize="26" FontWeight="Bold"/>
                        <TextBlock Text="STORE" Foreground="#66c0f4" FontSize="26" FontWeight="Bold" Margin="5,0,0,0"/>
                    </StackPanel>

                    <Label Content="NOMBRE DE USUARIO" Foreground="#8f98a0" FontSize="10" FontWeight="Bold"/>
                    <TextBox x:Name="txtUser" Margin="0,0,0,10" Padding="10" Background="#2a475e" Foreground="White" BorderThickness="0" FontSize="14"/>

                    <Label Content="CONTRASEÑA" Foreground="#8f98a0" FontSize="10" FontWeight="Bold"/>
                    <PasswordBox x:Name="txtPass" Margin="0,0,0,10" Padding="10" Background="#2a475e" Foreground="White" BorderThickness="0" FontSize="14"/>

                    <Label Content="EMAIL (Solo para Registro)" Foreground="#8f98a0" FontSize="10" FontWeight="Bold"/>
                    <TextBox x:Name="txtEmail" Margin="0,0,0,20" Padding="10" Background="#2a475e" Foreground="White" BorderThickness="0" FontSize="14"/>

                    <TextBlock x:Name="lblError" Foreground="#ff4c4c" Margin="0,0,0,15" TextAlignment="Center" TextWrapping="Wrap" FontWeight="Bold"/>

                    <Button Content="INICIAR SESIÓN" Click="BtnLogin_Click" Padding="12" Background="#66c0f4" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="0,0,0,10">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="CREAR CUENTA NUEVA" Click="BtnRegister_Click" Padding="12" Background="Transparent" Foreground="#8f98a0" FontWeight="Bold" BorderThickness="1" BorderBrush="#8f98a0" Cursor="Hand" Margin="0,0,0,10">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <Button Grid.Row="1" Content="SALIR AL ESCRITORIO" Click="BtnSalir_Click" Background="#ff4c4c" Foreground="White" FontWeight="Bold"/>
    </Grid>
</Window>