<Window x:Class="LoginPractica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Login" Height="500" Width="420"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#171a21">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2a475e"/>
            <Setter Property="Foreground" Value="#c7d5e0"/>
            <Setter Property="BorderBrush" Value="#171a21"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#2a475e"/>
            <Setter Property="Foreground" Value="#c7d5e0"/>
            <Setter Property="BorderBrush" Value="#171a21"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="INICIAR SESIÓN" Foreground="#66c0f4" FontSize="26" FontWeight="Bold" Margin="0,0,0,25"/>

            <Label Content="NOMBRE DE CUENTA" Foreground="#66c0f4" FontSize="10" FontWeight="Bold"/>
            <TextBox x:Name="txtUsuario" Margin="0,0,0,15"/>

            <Label Content="CONTRASEÑA" Foreground="#66c0f4" FontSize="10" FontWeight="Bold"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,15"/>

            <Label Content="EMAIL (SOLO PARA REGISTRO)" Foreground="#8f98a0" FontSize="10" FontWeight="Bold"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10" Tag="Opcional para login"/>

            <TextBlock x:Name="lblMensaje" Text="" Foreground="#ff4c4c" FontSize="12" Margin="0,5" TextAlignment="Center" TextWrapping="Wrap"/>

            <UniformGrid Columns="2" Margin="0,15,0,0">
                <Button x:Name="btnRegistro" Content="Crear Cuenta" Click="BtnRegistro_Click" Margin="0,0,5,0" Padding="10" Background="#3d4450" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                <Button x:Name="btnLogin" Content="Iniciar Sesión" Click="BtnLogin_Click" Margin="5,0,0,0" Padding="10" Background="#66c0f4" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            </UniformGrid>

            <Button Content="Salir" Click="BtnSalir_Click" Background="Transparent" Foreground="#8f98a0" BorderThickness="0" Margin="0,20,0,0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>