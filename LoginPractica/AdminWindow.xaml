<Window x:Class="LoginPractica.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Admin NEXUS" Height="800" Width="1100"
        WindowStartupLocation="CenterScreen" Background="#1b2838">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header=" 👤 GESTIÓN USUARIOS ">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.3*"/>
                        </Grid.ColumnDefinitions>

                        <DockPanel Grid.Column="0">
                            <TextBlock Text="BUSCAR USUARIO (Nombre o Email):" Foreground="#8f98a0" FontSize="10" FontWeight="Bold" Margin="0,0,0,5" DockPanel.Dock="Top"/>

                            <TextBox x:Name="txtBusquedaUser" TextChanged="TxtBusquedaUser_TextChanged" 
                                     DockPanel.Dock="Top" Margin="0,0,0,10" Height="30" VerticalContentAlignment="Center" Padding="5"/>

                            <DataGrid x:Name="gridUsuarios" SelectionChanged="GridUsuarios_SelectionChanged" IsReadOnly="True"/>
                        </DockPanel>

                        <Border Grid.Column="1" Background="#171a21" Margin="10,0,0,0" CornerRadius="5">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="DATOS DEL USUARIO" Foreground="#66c0f4" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                                    <Label Content="ID (Automático):" Foreground="Gray" FontSize="10"/>
                                    <TextBox x:Name="txtId" IsReadOnly="True" Background="#333" Foreground="#AAA" BorderThickness="0" Margin="0,0,0,5"/>

                                    <Label Content="Nombre de Usuario:" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBox x:Name="txtUser" Margin="0,0,0,5" Height="30" VerticalContentAlignment="Center" Padding="5"/>

                                    <Label Content="Contraseña:" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBox x:Name="txtPass" Margin="0,0,0,5" Height="30" VerticalContentAlignment="Center" Padding="5"/>

                                    <Label Content="Correo Electrónico:" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBox x:Name="txtEmail" Margin="0,0,0,5" Height="30" VerticalContentAlignment="Center" Padding="5"/>

                                    <Label Content="Rol:" Foreground="White" FontWeight="SemiBold"/>
                                    <ComboBox x:Name="cmbRol" Margin="0,0,0,5" Height="30" VerticalContentAlignment="Center" Padding="5">
                                        <ComboBoxItem Content="user"/>
                                        <ComboBoxItem Content="admin"/>
                                    </ComboBox>

                                    <CheckBox x:Name="chkBan" Content="Usuario Baneado" Foreground="#ff4c4c" FontWeight="Bold" Margin="0,15,0,15"/>

                                    <TextBlock Text="ACCIONES:" Foreground="Gray" FontSize="10" Margin="0,10,0,5"/>

                                    <Button Content="ACTUALIZAR / GUARDAR CAMBIOS" Click="BtnEditar_Click" Margin="0,5" Height="35" Background="#66c0f4" FontWeight="Bold"/>
                                    <Button Content="CREAR NUEVO USUARIO" Click="BtnCrear_Click" Margin="0,5" Height="35" Background="#5c7e10" Foreground="White" FontWeight="Bold"/>
                                    <Button Content="ELIMINAR USUARIO" Click="BtnEliminar_Click" Margin="0,5" Background="#ff4c4c" Foreground="White" Height="35" FontWeight="Bold"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,15,0,0">
                        <TextBlock Text="HISTORIAL DE LOGS" Foreground="#8f98a0" Margin="0,0,0,5"/>
                        <DataGrid x:Name="gridLogs" Margin="0,20,0,0" IsReadOnly="True"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header=" 🎮 GESTIÓN JUEGOS ">
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid x:Name="gridJuegos" Grid.Column="0" IsReadOnly="True" Background="#2a475e" SelectionChanged="GridJuegos_SelectionChanged"/>

                    <Border Grid.Column="1" Background="#171a21" Margin="10,0,0,0" CornerRadius="5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                            <StackPanel>
                                <TextBlock Text="DATOS DEL VIDEOJUEGO" Foreground="#66c0f4" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                                <TextBox x:Name="txtJuegoId" Visibility="Collapsed"/>

                                <Label Content="Título del Juego:" Foreground="White"/>
                                <TextBox x:Name="txtJuegoTitulo" Margin="0,0,0,5" Height="25" Padding="2"/>

                                <Label Content="Categoría:" Foreground="White"/>
                                <TextBox x:Name="txtJuegoCat" Margin="0,0,0,5" Height="25" Padding="2"/>

                                <Label Content="Precio (€):" Foreground="White"/>
                                <TextBox x:Name="txtJuegoPrecio" Margin="0,0,0,5" Height="25" Padding="2"/>

                                <Label Content="URL Imagen:" Foreground="White"/>
                                <TextBox x:Name="txtJuegoImg" Margin="0,0,0,5" Height="25" Padding="2"/>

                                <Label Content="Descripción:" Foreground="White"/>
                                <TextBox x:Name="txtJuegoDesc" Height="60" TextWrapping="Wrap" Margin="0,0,0,15" Padding="2"/>

                                <TextBlock Text="ACCIONES:" Foreground="Gray" FontSize="10" Margin="0,10,0,5"/>

                                <Button Content="ACTUALIZAR JUEGO SELECCIONADO" Click="BtnEditJuego_Click" Background="#66c0f4" FontWeight="Bold" Height="35" Margin="0,0,0,5"/>
                                <Button Content="AGREGAR NUEVO JUEGO" Click="BtnAddJuego_Click" Background="#5c7e10" Foreground="White" Height="35" FontWeight="Bold" Margin="0,0,0,5"/>
                                <Button Content="BORRAR JUEGO" Click="BtnDelJuego_Click" Background="#ff4c4c" Foreground="White" Height="35" FontWeight="Bold"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <Button Grid.Row="1" Content="CERRAR PANEL Y VOLVER A LA TIENDA" Click="BtnCerrar_Click" 
                Background="#2a475e" Foreground="White" FontWeight="Bold" Margin="0,10,0,0"/>
    </Grid>
</Window>